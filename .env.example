# Database Configuration
DATABASE_URL=mysql://user:password@localhost:3306/alpha_system

# LLM API Keys
OPENAI_API_KEY=sk-your-key-here
GEMINI_API_KEY=your-gemini-key-here

# OAuth Configuration (Optional)
VITE_OAUTH_PORTAL_URL=https://oauth.example.com
OAUTH_SERVER_URL=https://api.oauth.example.com
VITE_APP_ID=your-app-id
JWT_SECRET=your-jwt-secret

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_EMAIL=your-email@gmail.com

# Data Sources Configuration
HACKERNEWS_API_URL=https://hacker-news.firebaseio.com/v0
PRODUCT_HUNT_API_KEY=your-product-hunt-key

# Investment Data Configuration
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
COINGECKO_API_URL=https://api.coingecko.com/api/v3

# Agent Configuration
AGENT_INFORMATION_ENABLED=true
AGENT_LEARNING_ENABLED=true
AGENT_INVESTMENT_ENABLED=true

# Schedule Configuration (Cron format)
AGENT_INFORMATION_SCHEDULE=0 8 * * *
AGENT_LEARNING_SCHEDULE=0 12 * * *
AGENT_INVESTMENT_SCHEDULE=0 15 * * *

# Timezone
TIMEZONE=Asia/Shanghai

# Environment
NODE_ENV=development
DEBUG=false
